{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Gerer Comptes Utilisateurs{% endblock %}
{% block content %}
    <label>Gerer Comptes Utilisateurs</label>
{% endblock  %}
{% block WarperContent %}

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Liste des gerants</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Config option 1</a>
                    </li>
                    <li><a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                    <tr>
                        <th>Nom Agence</th>
                        <th>Adresse</th>
                        <th>EMail</th>
                        <th>Abb Newslettre</th>
                        <th>Etat Compte</th>
                        <th>Activer/Désactiver</th>
                    </tr>
                </thead>
                <tbody>
                    {% for g in gerant %}
                        <tr class="gradeX">
                            <td>{{ g.nomAgence }}</td>
                            <td>{{ g.adresse }}</td>
                            <td>{{ g.email }}</td>
                            <td>{{ g.abbnewslettre ? 'Yes':'No' }}</td>
                            <td>{{ g.etatCompte ? 'Activer':'Désactiver' }}</td>
                            <td>
                    <center>
                        {% if g.etatCompte %}
                        <a href="{{ path('administrateur_desactiver_Utilisateur',{id:g.idUtilisateur}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-lock"> Désactiver </i></a>
                        {% else %}
                        <a href="{{ path('administrateur_activer_Utilisateur',{id:g.idUtilisateur}) }}" class="btn btn-outline btn-primary dim" ><i class="fa fa-unlock"> Activer </i></a>                       
                        {% endif %}
                    </center>
                    </td>

                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Liste des clients</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Config option 1</a>
                    </li>
                    <li><a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Email</th>
                        <th>Date Naissance</th>
                        <th>Sexe</th>
                        <th>Telephone</th>
                        <th>Abb Newslettre</th>
                        <th>Etat Compte</th>
                        <th>Activer/Désactiver</th>
                    </tr>
                </thead>
                <tbody>
                    {% for c in client %}
                        <tr class="gradeX">
                            <td>{{ c.nom }}</td>
                            <td>{{ c.prenom }}</td>
                            <td>{{ c.email }}</td>
                            <td>{{ c.dateNaissance|date("d/m/Y") }}</td>
                            <td>{{ c.sexe }}</td>
                            <td>{{ c.telephone }}</td>
                            <td>{{ c.abbnewslettre ? 'Yes':'No' }}</td>
                            <td>{{ c.etatCompte ? 'Activer':'Désactiver' }}</td>
                            <td>
                    <center>
                        {% if c.etatCompte %}
                        <a href="{{ path('administrateur_desactiver_Utilisateur',{id:c.idUtilisateur}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-lock"> Désactiver </i></a>                        
                        {% else %}
                        <a href="{{ path('administrateur_activer_Utilisateur',{id:c.idUtilisateur}) }}" class="btn btn-outline btn-primary dim" ><i class="fa fa-unlock"> Activer </i></a>                       
                        {% endif %}
                    </center>
                    </td>
                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>
{% endblock  %}