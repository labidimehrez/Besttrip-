{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Consulter Lieu{% endblock %}
{% block content %}
    <label>Consulter Lieu :</label>
{% endblock  %}
{% block WarperContent %}

                            <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Liste des Lieux</h5>
                        
                    </div>
                    <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Type</th>
                        <th>Ville</th>
                        <th>Modifier/Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for lieu in lieux %}
                    <tr class="gradeX">
                        <td>{{ lieu.nom }}</td>
                        <td>{{ lieu.adresse }}</td>
                        <td>{{ lieu.type }}</td>
                        <td class="center">{{ lieu.idVille }}</td>
                        <td >
                        <center>
                            <a href="{{ path('administrateur_modifier_lieu',{id:lieu.idLieu}) }}" class="btn btn-outline btn-warning  dim" ><i class="fa fa-wrench"></i></a>
                            <a href="{{ path('administrateur_supprimer_lieu',{id:lieu.idLieu}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-trash"></i></a>
                        </center>
                        </td>
                        
                    </tr>
                   {% endfor %}
                    </tbody>
                   
                    </table>

                    </div>
                </div>
            
{% endblock  %}