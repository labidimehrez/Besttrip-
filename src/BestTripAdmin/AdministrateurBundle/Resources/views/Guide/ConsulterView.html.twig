{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Consulter Guide{% endblock %}
{% block content %}
    <label>Consulter Guide :</label>
{% endblock  %}
{% block WarperContent %}

                            <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Afficher Tous Les Guides</h5>
                        
                    </div>
                    <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Discription</th>
                        <th>Pays</th>
                        <th>Ville</th>
                        <th>Guide Pdf</th>
                        <th>Modifier</th>
                        <th>Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for guide in guides %}
                    <tr class="gradeX">
                        <td>{{ guide.titre }}</td>
                        <td>{{ guide.description }}</td>
                        <td class="center">{{ guide.idPays }}</td>
                        <td class="center">{{ guide.idVille }}</td>
                        <td>{{ guide.lien }}</td>
                        <td >
                        <center>
                            <a href="{{ path('administrateur_modifier_guide',{id:guide.idGuide}) }}" class="btn btn-outline btn-warning  dim" ><i class="fa fa-wrench"></i></a>
                        </center>
                        </td>
                        <td >
                        <center>
                            <a href="{{ path('administrateur_supprimer_guide',{id:guide.idGuide}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-trash"></i></a>
                        </center>
                        </td>
                        
                    </tr>
                   {% endfor %}
                    </tbody>
                   
                    </table>

                    </div>
                </div>
            
{% endblock  %}
