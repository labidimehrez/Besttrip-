{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Consulter Compagnies{% endblock %}
{% block content %}
    <label>Consulter Compagnies :</label>
{% endblock  %}
{% block WarperContent %}

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Afficher Tous Les Compagnies</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Config option 1</a>
                    </li>
                    <li><a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Type</th>
                        <th>Logo</th>
                        <th>Lien</th>

                        <th>Modifier/Supprimer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for cmp in comp %}
                        <tr class="gradeX">
                            <td>{{ cmp.nom }}</td>
                            <td>{{ cmp.type }}</td>
                            <td><img src="{{ asset('uploads/Compagnie/'~cmp.logo) }}" height="100" width="100"/></td>
                            <td class="center">{{ cmp.lien }}</td>

                            <td >
                    <center>
                        <a href="{{ path('administrateur_modifier_compagnie',{id:cmp.idCompagnie}) }}" class="btn btn-outline btn-warning  dim" ><i class="fa fa-wrench"></i></a>                       
                        <a href="{{ path('administrateur_supprimer_compagnie',{id:cmp.idCompagnie}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-trash"></i></a>
                    </center>
                    </td>

                    </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>

{% endblock  %}