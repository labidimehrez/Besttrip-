{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Valider Compte Gerant{% endblock %}
{% block content %}
    <label>Valider Compte Gerant</label>
{% endblock  %}
{% block WarperContent %}

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Basic Data Tables example with responsive plugin</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Config option 1</a>
                    </li>
                    <li><a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                    <tr>
                        <th>Nom Agence</th>
                        <th>Adresse</th>
                        <th>EMail</th>
                        <th>Accepter/Ignorer</th>
                    </tr>
                </thead>
                <tbody>
                    {% for g in geranttmp %}
                        <tr class="gradeX">
                            <td>{{ g.nomAgence }}</td>
                            <td>{{ g.adresse }}</td>
                            <td>{{ g.email }}</td>
                            <td >
                    <center>
                        <a href="{{ path('administrateur_confirmer_Geranttmp',{id:g.idGerant}) }}" class="btn btn-outline btn-primary dim" ><i class="fa fa-check"> Valider </i></a>                       
                        <a href="{{ path('administrateur_ignorer_Geranttmp',{id:g.idGerant}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-trash"> Ignorer </i></a>
                    </center>
                    </td>

                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>

{% endblock  %}