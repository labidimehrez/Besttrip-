
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Consulter Signalisations des offres{% endblock %}

{% block content %}
<label>Consulter Signalisation des Offres personnelles :</label>
    {% endblock  %}
    
    {% block WarperContent %}
        
         <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                <i class="fa fa-wrench"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-user">
                                <li><a href="#">Config option 1</a>
                                </li>
                                <li><a href="#">Config option 2</a>
                                </li>
                            </ul>
                            <a class="close-link">
                                <i class="fa fa-times"></i>
                            </a>
                        </div>
                    </div>
                    <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" >
                    <thead>
                    <tr>
                        <th>Utilisateur</th>
                        <th>Description de l'offre</th> 
                        <th>Commentaire</th>
                       
                        <th>Date Ajout</th>
                        <th>Nombre de Signalisations</th>
                        <th>Ignorer/Supprimer</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for s in signalisations %}
                    <tr class="gradeX">
                        <td>{{ s.idOffrep.idUtilisateur.email }}</td>
                        <td>{{ s.idOffrep.description }}</td>
                        <td>{{ s.commentaire }}</td>
                        
                        <td class="center">{{ s.idOffrep.dateAjout|date('Y-m-d') }}</td>
                        <td>{{ s.NbreSignalisation }}</td>
                        <td >
                        <center>
                            <a href="{{ path('administrateur_Ignorer_Signalisation_Offre',{id:s.idOffrep.idOffrep}) }}" class="btn btn-info btn-circle" ><i class="fa fa-check" title="Ignorer la signalisation"></i></a>                       
                            <a href="{{ path('administrateur_Supprimer_Signalisation_Offre',{idi:s.idOffrep.idOffrep}) }}" class="btn btn-warning btn-circle"><i class="fa fa-times" title="Supprimer la signalisation"></i></a>
                        </center>
                        </td>
                        
                    </tr>
                   {% endfor %}
                    </tbody>
                   
                    </table>

                    </div>
                </div>
        
{% endblock  %}

