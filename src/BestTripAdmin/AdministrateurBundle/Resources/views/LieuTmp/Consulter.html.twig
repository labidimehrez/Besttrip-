{# empty Twig template #}
{% extends "AdministrateurBundle::layout.html.twig" %} 
{% block title %}{{ parent() }}Valider Lieux{% endblock %}
{% block content %}
    <label>Valider Lieux</label>
{% endblock  %}
{% block WarperContent %}

    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Basic Data Tables example with responsive plugin</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                    <i class="fa fa-wrench"></i>
                </a>
                <ul class="dropdown-menu dropdown-user">
                    <li><a href="#">Config option 1</a>
                    </li>
                    <li><a href="#">Config option 2</a>
                    </li>
                </ul>
                <a class="close-link">
                    <i class="fa fa-times"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">

            <table class="table table-striped table-bordered table-hover dataTables-example" >
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Type</th>
                        <th>Ville</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for lieu in lieux %}
                        <tr class="gradeX">
                            <td>{{ lieu.nom }}</td>
                            <td>{{ lieu.adresse }}</td>
                            <td>{{ lieu.type }}</td>
                            <td class="center">{{ lieu.idVille }}</td>
                            <td >
                    <center>
                        <a href="{{ path('administrateur_Accepter_lieutmp',{id:lieu.idLieux}) }}" class="btn btn-outline btn-primary dim" ><i class="fa fa-check"> Valider </i></a>                       
                        <a href="{{ path('administrateur_Ignorer_lieutmp',{id:lieu.idLieux}) }}" class="btn btn-outline btn-danger  dim "><i class="fa fa-trash"> Ignorer </i></a>
                        <a href="{{ path('administrateur_visualiser_lieutmp',{id:lieu.idLieux}) }}" class="btn btn-outline btn-warning dim"><i class="fa fa-map-marker"> Visualiser </i></a>

                    </center>
                    </td>

                    </tr>
                {% endfor %}
                </tbody>

            </table>

        </div>
    </div>

{% endblock  %}