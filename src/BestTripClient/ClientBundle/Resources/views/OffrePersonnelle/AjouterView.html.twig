{# empty Twig template #}
{% extends "ClientBundle::layout.html.twig" %}
{% block pagetitle %}
    <div class="page-title-container">
        <div class="container">
            <div class="page-title pull-left">
                <h2 class="entry-title">Ajouter Offre Personnelle</h2>
            </div>

        </div>
    </div>
{% endblock %}
{% block container %}
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://code.jquery.com/ui/1.11.0/jquery-ui.min.js"></script>
    <script src="{{ asset('bundles/client/js/getVilleOffre.js') }}"></script>
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>

    {% if form_errors(form.titre) is not empty %}
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ form_errors(form.titre) }}
        </div>
    {% endif %}
    {% if form_errors(form.description) is not empty %}
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ form_errors(form.description) }}
        </div>
    {% endif %}
    {% if form_errors(form.prix) is not empty %}
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ form_errors(form.prix) }}
        </div>
    {% endif %}
    {% if form_errors(form.contact) is not empty %}
        <div class="alert alert-danger alert-dismissable">
            <button aria-hidden="true" data-dismiss="alert" class="close" type="button">×</button>
            {{ form_errors(form.contact) }}
        </div>
    {% endif %}
    <div class="tab-container full-width-style arrow-left dashboard">

        <ul class="tabs">
            <li class="active"><a href="#first-tab" data-toggle="tab"><i class="soap-icon-hotel hotel-color"></i>Information de base</a></li>
            <li class=""><a href="#second-tab" data-toggle="tab"><i class="soap-icon-beach"></i>Information suplementaire</a></li>
        </ul><form method="POST" id="itinForm" {{ form_enctype(form) }} novalidate >
            <div class="tab-content">

                <div class="tab-pane fade in active" id="first-tab">
                    <label>Titre: *</label>
                    {{ form_widget(form.titre) }}
                    <br>
                    <label>Description: *</label>
                    {{ form_widget(form.description) }} 
                    <label>Date De Debut / De Fin : *</label> 
                    <div class="row form-group">

                        <div class="col-sm-6 col-sm-6" >
                            De:
                            {{ form_widget(form.dateDebut) }} 
                        </div>
                        <div class="col-sm-6 col-sm-6" >
                            Jusqu'a :
                            {{ form_widget(form.dateFin) }} 
                        </div>
                    </div>    
                </div>
                <div class="tab-pane fade" id="second-tab">

                    <label>Prix: *</label>
                    {{ form_widget(form.prix) }} 
                    {{ form_widget(form.devise) }} 
                    <br>

                    <label>Pays: *</label>
                    <select class="form-control m-b" name="Pays" id="Pays" style=" width: 300px;">
                        <option value="0">-- Choisir Pays --</option> 
                        {% for pay in Pays %}
                            <option value="{{ pay.idPays }}">{{ pay.nom }}</option>
                        {% endfor %}
                    </select>
                    <label id="label">Ville: *</label>
                    <div class="v">
                        <select class="form-control m-b" name="Ville" id="Ville" style=" width: 300px;">
                            <option value="">-- Choisir Ville --</option> 
                        </select>
                    </div>
                    <br>
                    <label>Contact: *</label>
                    {{ form_widget(form.contact) }} 
                    <br>
                    <br>
                    {{ form(form) }}
                </div>

            </div>  </form>
    </div>
{% endblock %}
